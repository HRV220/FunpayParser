@model WebApplication2.Models.VM.SellerViewModel

@{
    ViewData["Title"] = "EditSeller";
}

<h1>EditSeller</h1>

<h4>SellerViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditSeller">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="SellerName" class="control-label"></label>
                <input asp-for="SellerName" class="form-control" />
                <span asp-validation-for="SellerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReviewCount" class="control-label"></label>
                <input asp-for="ReviewCount" class="form-control" />
                <span asp-validation-for="ReviewCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SellerInfo" class="control-label"></label>
                <input asp-for="SellerInfo" class="form-control" />
                <span asp-validation-for="SellerInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RatingStar" class="control-label"></label>
                <input asp-for="RatingStar" class="form-control" />
                <span asp-validation-for="RatingStar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
